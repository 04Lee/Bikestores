@model IEnumerable<System.IO.FileInfo>

@{
    var fromDate = ViewBag.FromDate as string ?? "";
    var toDate = ViewBag.ToDate as string ?? "";
}

<div class="card mt-5 shadow-sm">
    <div class="card-header bg-primary text-white fw-bold">Saved Reports Archive</div>
    <div class="card-body p-4">
        @if (!Model.Any())
        {
            <p class="mb-0 text-muted">No reports have been saved yet.</p>
        }
        else
        {
            <table class="table table-striped table-bordered align-middle mb-0">
                <thead>
                    <tr>
                        <th>Filename</th>
                        <th>Created On</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model)
                    {
                        <tr>
                            <td>@file.Name</td>
                            <td>@file.CreationTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-center">
                                <a class="btn btn-link btn-sm" href="@Url.Action("Download", "PopularProductsReport", new { filename = file.Name })" target="_blank">
                                    <i class="fa fa-download"></i> Download
                                </a>
                                @using (Html.BeginForm("Delete", "PopularProductsReport", FormMethod.Post, new { @style = "display:inline;" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("filename", file.Name)
                                    @Html.Hidden("from", fromDate)
                                    @Html.Hidden("to", toDate)
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete @file.Name?');" title="Delete report">
                                        <i class="fa fa-trash"></i> Delete
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
