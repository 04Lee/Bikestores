@model Bikestores.Models.product

@{
    ViewBag.Title = "Product Details";

    string productName = Model?.product_name ?? "N/A";
    string modelYear = Model?.model_year.ToString() ?? "N/A";
    string price = Model?.list_price.ToString("C") ?? "N/A";
    string brandName = Model?.brand?.brand_name ?? "—";
    string categoryName = Model?.category?.category_name ?? "—";

    // Random instance for image selection (like Index view)
    var random = new Random();
    string imageFolder = Url.Content("~/Content/Bike-Images");
    int imageIndex = random.Next(1, 3); // 1 or 2
    string brandFileName = $"{(brandName ?? "default").Replace(" ", "_")}{imageIndex}.jpeg";
    string imagePath = $"{imageFolder}/{brandFileName}";
    string defaultImage = Url.Content("~/Content/Bike-Images/default.jpeg");
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-10">
            <div class="card shadow-sm border-0 rounded-4">
                <img src="@imagePath" alt="@brandName Bike" class="card-img-top product-img"
                     onerror="this.onerror=null;this.src='@defaultImage';" />

                <div class="card-body p-5 text-center">
                  

                    <div class="text-start mb-4 small">
                        <p><strong>Name:</strong> @productName</p>
                        <p><strong>Year:</strong> @modelYear</p>
                        <p><strong>Price:</strong> @price</p>
                        <p><strong>Brand:</strong> @brandName</p>
                        <p><strong>Category:</strong> @categoryName</p>
                    </div>

                    <div class="d-flex justify-content-center gap-3 mt-4">
                        @Html.ActionLink("Edit", "Edit", new { id = Model.product_id }, new { @class = "btn btn-outline-warning px-4 py-2 rounded-pill shadow-sm" })
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary px-4 py-2 rounded-pill" })
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f7fa;
        font-family: "Segoe UI", Arial, sans-serif;
    }

    .product-img {
        width: auto;
        height: auto;
        object-fit: cover;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
        margin: auto;
        margin-top: 20px;
    }

    .card {
        border-radius: 1rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 18px rgba(0,0,0,0.15);
        }

    .btn {
        transition: all 0.2s ease;
    }

        .btn:hover {
            transform: scale(1.03);
        }

    h3 {
        letter-spacing: 0.3px;
    }
</style>
